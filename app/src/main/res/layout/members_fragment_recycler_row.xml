<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/memberImage"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/memberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:text="Oğuz Ergin"
        app:layout_constraintStart_toEndOf="@+id/memberImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/memberInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="Tobb Etü Bilgisiyar Mühendisliği Başkanı"
        app:layout_constraintStart_toEndOf="@+id/memberImage"
        app:layout_constraintTop_toBottomOf="@+id/memberName" />

    <TextView
        android:id="@+id/memberLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="Linkedin Hesabı İçin Tıklayınız:"
        android:textColor="#0055FF"
        app:layout_constraintStart_toEndOf="@+id/memberImage"
        app:layout_constraintTop_toBottomOf="@+id/memberInfo" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:backgroundTint="#00FFA6"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memberImage" />


</androidx.constraintlayout.widget.ConstraintLayout>