<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">




    <ImageView
        android:id="@+id/imageViewActivity"
        android:layout_width="125dp"
        android:layout_margin="10dp"
        android:layout_height="175dp"
       />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/actvName"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PİZZA+CYBER=FUN" />

        <TextView
            android:id="@+id/actvSlogan"
            android:layout_margin="5dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Etkinliğe katılım için formu doldurunuz" />



        <TextView
            android:id="@+id/actvDate"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="25 Ağustos 2023" />

        <TextView
            android:id="@+id/actvTime"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="12.30" />

        <TextView
            android:id="@+id/actvPlace"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Teknoloji Merkezi Fuaye Alanı" />


        <TextView
            android:id="@+id/actvApplication"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Son Başvuru: 14 Ekim" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="@drawable/line"/>



    </LinearLayout>






</LinearLayout>