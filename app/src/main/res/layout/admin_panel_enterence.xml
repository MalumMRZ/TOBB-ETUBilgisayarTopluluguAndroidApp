<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/activityLayout"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@android:color/holo_blue_bright"
        android:backgroundTint="#82E1FF"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:background="#82E1FF"
            android:src="@drawable/back" />


        <TextView
            android:id="@+id/toolbarDetailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:text="ETKİNLİKLERİMİZ"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#82E1FF"
            android:src="@drawable/home" />


    </LinearLayout>


    <Button
        android:id="@+id/gameDevClub"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/classic_button"
        android:backgroundTint="#FF8A80"
        android:paddingStart="35dp"
        android:paddingRight="0dp"
        android:text="Oyun Geliştirme Kulübü"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aiClub">

    </Button>

    <Button
        android:id="@+id/appDevClub"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/classic_button"
        android:backgroundTint="#F4E097"
        android:paddingStart="35dp"
        android:paddingRight="0dp"
        android:text="Uygulama Geliştirme Kulübü"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameDevClub">

    </Button>

    <Button
        android:id="@+id/aiClub"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/classic_button"
        android:backgroundTint="#D2E3B9"
        android:paddingStart="30dp"
        android:paddingRight="0dp"
        android:text="Yapay Zeka Kulübü"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blockChainClub">

    </Button>

    <Button
        android:id="@+id/cyberSecClub"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/classic_button"
        android:backgroundTint="#9693F6"
        android:paddingStart="35dp"
        android:paddingRight="0dp"
        android:text="Siber Güvenlik Kulübü"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appDevClub">

    </Button>

    <Button
        android:id="@+id/blockChainClub"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/classic_button"
        android:backgroundTint="#F1B0F6"
        android:paddingStart="35dp"
        android:paddingRight="45dp"
        android:text="BlockChain Kulubü"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityLayout">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>